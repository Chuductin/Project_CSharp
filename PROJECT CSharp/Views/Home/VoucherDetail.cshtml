
@{
    ViewBag.Title = "VoucherDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Register Section Start -->
<!-- CSS của profile -->
<link rel="stylesheet" href="~/Assets/css/profile.css">

<div class="register-section section mt-90 mb-90">
    <div class="container">
        <div class="row">
            <div class="col-md-3 ">
                <div class="headerAccount">
                    <h1>TinCD</h1>
                    <p>tincdhe140546@gmail.com</p>
                    <ul>
                        <li>
                            <a href="Profile" class="option"><img src="~/Assets/images/icons/back2.png" /><span>Quay lại</span> </a>
                        </li>

                    </ul>
                </div>
            </div>
            <div style="margin-bottom: 50px;" class="col-md-9">
                <div class="card">
                    <!-- Product detail form -->
                    <div id="editForm" style="display: block;" class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <h4 style="font-weight: bold;">Voucher giảm giá</h4>
                                <hr>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <form>
                                    <div class="form-group row">
                                        <label for="username" class="col-4 col-form-label">Mã Voucher:</label>
                                        <div class="col-8">
                                            <input id="username" name="username" placeholder="Tên mã giảm giá" class="form-control here" required="required" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="name" class="col-4 col-form-label">%:</label>
                                        <div class="col-8">
                                            <input id="name" name="name" placeholder="Nhập số" class="form-control here" required="required" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="lastname" class="col-4 col-form-label">Số lượng</label>
                                        <div class="col-8">
                                            <input class="col-4 spiner" placeholder="Nhập số lượng" required type="number" value="" min="0" max="100" />
                                        </div>

                                    </div>
                                    <div class="form-group row">
                                        <div class="offset-4 col-8">
                                            <button style="background-color:#f5d730; border-radius: 10px; border: 1px solid #edede9" name="submit" type="submit" class="btn ">Lưu Voucher</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register Section End -->
